{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "UiCommon": [
        "dist/ui-common/ui-common",
        "dist/ui-common"
      ],
      "common": [
        "dist/common/common",
        "dist/common"
      ],
      "components": [
        "dist/components/components",
        "dist/components"
      ],
      "@spartan-ng/ui-button-helm": [
        "./projects/spartan-ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-menu-helm": [
        "./projects/spartan-ui/ui-menu-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./projects/spartan-ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "./projects/spartan-ui/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "./projects/spartan-ui/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/ui-alert-helm": [
        "./projects/spartan-ui/ui-alert-helm/src/index.ts"
      ],
      "@spartan-ng/ui-typography-helm": [
        "./projects/spartan-ui/ui-typography-helm/src/index.ts"
      ],
      "@spartan-ng/ui-spinner-helm": [
        "./projects/spartan-ui/ui-spinner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-separator-helm": [
        "./projects/spartan-ui/ui-separator-helm/src/index.ts"
      ],
      "@spartan-ng/ui-card-helm": [
        "./projects/spartan-ui/ui-card-helm/src/index.ts"
      ]
    },
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
